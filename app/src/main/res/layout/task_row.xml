<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#171C26"
    android:paddingBottom="16sp">

    <TextView
        android:id="@+id/txt_title_note"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="#ae3b76"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_description_note"
        android:layout_width="122dp"
        android:layout_height="58dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="115dp"
        android:lines="4"
        android:singleLine="false"
        android:text="TextView"
        android:textColor="@color/ColorWhite"
        android:textStyle="italic"
        app:layout_constraintEnd_toStartOf="@+id/btn_media"
        app:layout_constraintStart_toEndOf="@+id/cb_completed"
        app:layout_constraintTop_toBottomOf="@+id/txt_date_hour" />

    <TextView
        android:id="@+id/txt_date_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="140dp"
        android:text="00/00/0000 00:00"
        android:textColor="#FF03DAC5"
        app:layout_constraintEnd_toStartOf="@+id/btn_edit"
        app:layout_constraintTop_toBottomOf="@+id/txt_title_note" />

    <ImageView
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_delete" />

    <CheckBox
        android:id="@+id/cb_completed"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/txt_date_hour"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <ImageView
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_delete"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <Button
        android:id="@+id/btn_media"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:textSize="12dp"
        app:backgroundTint="#171C26"
        app:icon="@android:drawable/ic_menu_zoom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_edit" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:text="Â¿Finish?"
        android:textColor="@color/ColorWhite"
        app:layout_constraintEnd_toStartOf="@+id/txt_date_hour"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>